<!DOCTYPE html>
<html>
<head>
  <title>GolfClub</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
	<% if notice %>
		<div class="alert alert-success" role="alert"><%= notice %></div>
	<% end %>
	<% if alert %>
		<div class="alert alert-warning" role="alert"><%= alert %></div>
	<% end %>

	<% if user_signed_in? %>
		<%= link_to( "Log out", destroy_user_session_path, method: :delete, class: 'btn btn-default') %>
		<%= link_to "Change your password", edit_user_registration_path, class: 'btn btn-default' %>
	<% end %>

	<%= yield %>

</div>

</body>
</html>
